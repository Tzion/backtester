    "version": "0.2.0",
    "configurations": [
        {
            "name": "Backtester",
            "type": "python",
            "request": "launch",
            "program": "backtest.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Python Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Dashboard",
            "type": "python",
            "request": "launch",
            "module": "front.dashboard",
        },
        {
            "name": "Pytest Current File",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["--capture=no", "${file}"],
            "console": "integratedTerminal",
            "justMyCode": false,
        },
        {
            "name": "Signals",
            "type": "python",
            "request": "launch",
            "program": "live_signals.py",
            "console": "integratedTerminal",
            "justMyCode": false,
        },
    ]
}